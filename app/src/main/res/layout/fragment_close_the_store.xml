<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".CloseTheStoreFragment.CloseTheStoreFragment">

    <TextView
        android:id="@+id/open_close_textView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/la_belle_aurore"
        android:gravity="center"
        android:text="@string/open_string"
        android:textColor="@color/colorPrimary"
        android:textSize="100sp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/notice_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/open_close_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#fff"
        android:fontFamily="@font/la_belle_aurore"
        android:text="Notice"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/open_close_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_light"
        android:fontFamily="@font/la_belle_aurore"
        android:textAllCaps="false"
        android:padding="8dp"
        android:text="Close Stores"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#fff" />

</RelativeLayout>